package Principal;

import javax.swing.*;

public class Principal {
	public static void main(String[] args) {
		
		while(true) {
			String option = (String) JOptionPane.showInputDialog(null, "Seleccione una opcion de conversion", "OPCIONES",JOptionPane.QUESTION_MESSAGE, null, new Object[] {"Selecione", "Moneda","Temperatura"},"Selecione");
			if(option== "Moneda") {
				System.out.println("Buen chico");
			} else if(option == "Temperatura") {
				System.out.println("Temperatura ok");
			} else {
				System.out.println("Mal chico");
			}
		}
	}
}
