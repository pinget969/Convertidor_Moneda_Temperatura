	public String getMoneda2() {
		return moneda2;
	}

	public void setMoneda2(String moneda2) {
		if(moneda2 == "Peso") {
			this.moneda2 = peso;
		}
		if(moneda2 == "Real") {
			this.moneda2 = real;
		}
		if(moneda2 == "Euro") {
			this.moneda2 = euro;
		}
		if(moneda2== "Dolar") {
			this.moneda2 = dolar;
		}
		if(moneda2== "libra esterlina") {
			this.moneda2 = "libra";
		}else {
			this.moneda2 = "cero";
		}
	}

	public static Double peso() {
