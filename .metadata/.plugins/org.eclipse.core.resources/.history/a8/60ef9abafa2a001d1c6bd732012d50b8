package ConversorMoneda;

import javax.swing.JOptionPane;

public class TipoMoneda {
	
	public static void main(String[] args) {
		String moneda = (String) JOptionPane.showInputDialog(null, "Seleccione un tipo de moneda", "OPCIONES",JOptionPane.QUESTION_MESSAGE, null, new Object[] {"Selecione", "Dolar a Peso","Peso a Dolar"},"Selecione");
		//inicion borrador
		int seleccion = JOptionPane.showOptionDialog( null,"Seleccione una opcion",
				  "Selector de opciones",JOptionPane.YES_NO_CANCEL_OPTION,
				   JOptionPane.QUESTION_MESSAGE,null,// null para icono por defecto.
				  new Object[] { "opcion 1", "opcion 2", "opcion 3"},"opcion 1");
				     
				 if (seleccion != -1){
				           System.out.println("seleccionada opcion " + (seleccion + 1));
				 }
				 
				 //FIN BORRADOR
		if(moneda == "Dolar a Peso") {
			System.out.println("Dolar a Peso ok");
			//CONVERTIR MONEDAS
			
			
			String input = JOptionPane.showInputDialog(null, "Ingrese la cantidad de Dolares");
			double ValorRecibido = Double.parseDouble(input); //CONVERTIDO DE STRING A DOUBLE.
			System.out.println(ValorRecibido);
			
			Moneda peso = new Moneda("Dolar a Peso", ValorRecibido);
			TestconvertidorMoneda.convertir(peso);
			
		}else {
			System.out.println("mala");
		}
	}
	
	public double conversor(Moneda moneda) {
		double resultado = 1.2;
		if(moneda.getTipo().equals("peso")) {
			return moneda.getMonto()/300;
		}
		return resultado;
	}
}
