package ConversorMoneda;

import javax.swing.JOptionPane;

public class ConvertirMonedas {
	
		double PesoADolar = 300;
		double MonedaPeso = 0.0033;
		
		double moneda = (String) JOptionPane.showInputDialog(null, "Seleccione un tipo de moneda", "OPCIONES",JOptionPane.QUESTION_MESSAGE, null, new Object[] {"Selecione", "Dolar a Peso","Peso a Dolar"},"Selecione");
		if(moneda == "Dolar a Peso") {
			System.out.println("Dolar a Peso ok");
		}else {
			System.out.println("mala");
		}
};

