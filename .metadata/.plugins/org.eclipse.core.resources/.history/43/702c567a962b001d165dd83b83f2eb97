package ConversorMoneda;

import javax.swing.JOptionPane;

public class Moneda {
	String tipo; //PESO
	double monto; // 300
	
	public Moneda(){
		
	}
	
	
		public Moneda(String tipo, double monto) {
		this.tipo = tipo;
		this.monto = monto;
	}


		public String getTipo() {
		return tipo;
	}
	public void setTipo(String tipo) {
		this.tipo = tipo;
	}
	public double getMonto() {
		return monto;
	}
	public void setMonto(double monto) {
		this.monto = monto;
	}
		
		
		
		//double PesoADolar = 300;
		//double MonedaPeso = 0.0033;
		
		
}

